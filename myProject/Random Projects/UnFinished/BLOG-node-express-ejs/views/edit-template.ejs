<%- include('partials/header.ejs') %>

<h1><%= heading %></h1>
<% if (locals.data) { %>
<div class="form-container" id="form-container">
  <form action="" id="edit-blog-form" method="post">
    <label for="title">Title</label>
    <input type="text" value="<%= data.title %>" placeholder="Title" />
    <label for="">Category</label>
    <input type="text" value="<%= data.category %>" placeholder="Category" />
    <textarea name="" id="" cols="30" rows="10" placeholder="Your Blg here">
<%= data.text %></textarea
    >
    <button type="submit">Submit</button>
  </form>
</div>
<% } else { %> 
<div class="form-container">
  <form action="" id="new-blog-form" method="post">
    <label for="title">Title</label>
    <input type="text" id="title" name="title" placeholder="Title" required />
    <label for="">Category</label>
    <input type="text" id="category" name="category" placeholder="Category" />
    <label for="author">Author</label>
    <input type="text" id="author" name="author" placeholder="Author" />
    <textarea
      name=""
      id=""
      cols="30"
      rows="10"
      placeholder="Your Blg here"
    ></textarea>
    <button type="submit">Submit</button>
  </form>
</div>
<% } %>
<%- include('partials/footer.ejs') %>
